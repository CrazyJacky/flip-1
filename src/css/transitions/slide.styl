@import "../mixins/vendor"

html.csstransitions .flip-ready 
    section, .section
        display block
        -webkit-transition: -webkit-transform 0.25s ease-in-out
        -moz-transition: -moz-transform 0.25s ease-in-out

.flipper
    section, .section
        position absolute
        transform(translate(120%, 0))

        &.flip-active
            transform(translate(0, 0))

        &.flip-out
            transform(translate(-120%, 0))
            
        